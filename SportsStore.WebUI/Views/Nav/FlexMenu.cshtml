@model IEnumerable<string>
@{
    bool horizontal = ((bool)(ViewContext.RouteData.Values["horizontalLayout"] ?? false));
    string wrapperClasses = horizontal ? "btn-group btn-group-sm btn-group-justified" : null;
    string btnClasses = horizontal ? "btn btn-default btn-sm" : "btn btn-block btn-default btn-lg";
}
<div class="@wrapperClasses">
    @Html.ActionLink("Home", "List", "Producet", null, new { @class = btnClasses })
    @foreach (var link in Model)
    {
        @Html.RouteLink(link, new
   {
       controller = "Product",
       action = "List",
       category = link,
       page = 1
   }, new { @class = btnClasses + (link == ViewBag.SelectedCategory ? " btn-primary" : "") })
    }
</div>
